{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"paths": {
			"@/config/*": ["config/*"],
			"@/modules/*": ["modules/*"],
			"@/parsers/*": ["parsers/*"],
			"@/services/*": ["services/*"],
			"@/types/*": ["types/*"]
		},
		"rootDir": "./",
		"sourceMap": true,
		"target": "ESNext"
	},
	"exclude": ["**/node_modules", "**/.*/", "**/dist/"]
}
