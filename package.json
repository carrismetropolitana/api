{
	"name": "@carrismetropolitana/api",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=./packages/*",
		"dev": "npm run build:packages && npm i && turbo run dev --concurrency=99",
		"dev:sync": "npm run build:packages && npm i && turbo run dev:sync --concurrency=99",
		"docker:local:down": "docker compose -f docker/compose.local.yml down",
		"docker:local:up": "docker compose -f docker/compose.local.yml up -d --build --force-recreate --remove-orphans --pull=always",
		"docker:sync:down": "docker compose -f docker/compose.sync.yml down",
		"docker:sync:up": "docker compose -f docker/compose.sync.yml up -d --build --force-recreate --remove-orphans --pull=always",
		"lint": "turbo run lint",
		"start": "dotenv-run -- turbo run start",
		"start:sync": "dotenv-run -- turbo run start:sync"
	},
	"devDependencies": {
		"turbo": "2.2.3"
	},
	"packageManager": "npm@10.9.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
