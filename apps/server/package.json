{
	"name": "@carrismetropolitana/api-server",
	"version": "1.0.0",
	"type": "module",
	"files": ["dist"],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "npm run clean && tsc && resolve-tspaths && npm run copy",
		"clean": "rm -rf dist",
		"copy": "cp -r ./src/assets ./dist/assets",
		"dev": "dotenv-run -f ./secrets/development/.env.development -- tsx watch ./src/index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"@carrismetropolitana/api-services": "*",
		"@carrismetropolitana/api-settings": "*",
		"@carrismetropolitana/api-utils": "*",
		"@helperkits/logger": "20240703.1726.24",
		"@helperkits/timer": "20240627.34.23",
		"fastify": "5.0.0",
		"jwt-decode": "4.0.0",
		"luxon": "3.5.0",
		"pino-pretty": "^11.3.0",
		"protobufjs": "7.4.0"
	},
	"devDependencies": {
		"@types/luxon": "3.4.2"
	}
}
