{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "src",
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"paths": {
			"@/endpoints/*": ["endpoints/*"],
			"@/services/*": ["services/*"],
			"@/types/*": ["types/*"]
		},
		"rootDir": "src",
		"sourceMap": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"],
	"exclude": ["**/node_modules", "**/dist/"]
}
