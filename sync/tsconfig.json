{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./",
    "rootDir": "./",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
			"@/services/*": ["services/*"],
      "@/tasks/*": ["tasks/*"],
    },
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["**/node_modules", "**/.*/", "**/build/"]
}
