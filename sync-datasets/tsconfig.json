{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./",
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "build",
		"paths": {
			"@/*": ["src/*"]
		},
		"rootDir": "./",
		"sourceMap": true,
		"target": "ESNext"
	},
	"exclude": [
		"**/node_modules",
		"**/.*/",
		"**/build/"
	]
}
