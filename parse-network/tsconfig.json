{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/config/*": ["config/*"],
      "@/modules/*": ["modules/*"],
      "@/services/*": ["services/*"],
      "@/parsers/*": ["parsers/*"]
    }
  },
  "lib": ["es2020"],
  "exclude": ["**/node_modules", "**/.*/", "**/build/"]
}
