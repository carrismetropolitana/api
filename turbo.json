{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", ".env.*"],
	"globalEnv": ["NODE_ENV"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:sync": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"dependsOn": ["^start"],
			"outputs": ["dist/**"]
		},
		"start:sync": {
			"dependsOn": ["^start:sync"],
			"outputs": ["dist/**"]
		}
	},
	"ui": "tui"
}
