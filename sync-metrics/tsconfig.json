{
	"compilerOptions": {
		"target": "ESNext",
		"baseUrl": "./",
		"rootDir": "./",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"paths": {
			"@/services/*": ["services/*"],
			"@/src/*": ["src/*"]
		},
		"allowJs": true,
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true
	},
	"exclude": ["**/node_modules", "**/.*/", "**/dist/"]
}
